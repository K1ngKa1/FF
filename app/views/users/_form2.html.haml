.form2
  %h1.step-count Step 2/2
  = form_for @user do |f|
    .form-group.row
      .col-md-4.col-md-offset-2.col-xs-6
        = f.label "Employees?"
      .col-md-5.col-md-offset-1.col-xs-6.col-xs-6
        = f.select(:employees, options_for_select([['No', 'false'], ['Yes', 'true']]))
    .form-group.row
      .col-md-4.col-md-offset-2.col-xs-6
        = f.label "Revenue?"
      .col-md-5.col-md-offset-1.col-xs-6
        = f.select(:revenue, options_for_select([['No', 'false'], ['Yes', 'true']]))
    .form-group.row
      .col-md-4.col-md-offset-2.col-xs-6
        = f.label "Registered Agent Service?"
      .col-md-5.col-md-offset-1.col-xs-6
        = f.select(:registered_agent, options_for_select([['No', 'false'], ['Yes', 'true']]))
    .form-group.row
      .col-md-4.col-md-offset-2.col-xs-6
        = f.label "Email:"
      .col-md-5.col-md-offset-1.col-xs-6
        = f.text_field :email
    .col-md-6.col-md-offset-3.submit-btn
      = f.submit "Next", class: "btn2"

